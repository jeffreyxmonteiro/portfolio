<%= simple_form_for @portfolio_item do |f| %>
  <div class="row">
    <div class="col-md-6">
      <%=  f.input :title %>
      <%=  f.input :subtitle %>
      <%=  f.input :main_image %>
      <%=  f.input :thumb_image %>
    </div>
    <div class="col-md-6">
      <%=  f.input :body, :input_html => {:rows => 14} %>
    </div>
    <div class="col-md-12">
      <h3>Technologies used</h3>
      <%= f.simple_fields_for :technologies do |technology_form| %>
        <ul>
          <li>
            <%= technology_form.input :name %>
          </li>
        </ul>
      <% end %>
      <%= f.submit "Submit Portfolio", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
