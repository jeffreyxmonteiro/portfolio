<div class="col-auto">
  <a href="<%= portfolio_show_path(portfolio_item) %>", class="card-capture">
    <div class="card mb-4 shadow-sm" data-id="<%= portfolio_item.id %>">
      <img src=<%= portfolio_img(portfolio_item.thumb_image, 'thumb')%> alt="" class="portfolio-responsive">
      <div class="card-body">
        <h5 class="card-header-portfolio">
          <%= portfolio_item.title %>
        </h5>
        <p class="card-text">
          <%= portfolio_item.subtitle %>
        </p>
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
