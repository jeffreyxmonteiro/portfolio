<div class="col-md-4">
  <div class="card mb-4 shadow-sm" data-id="<%= portfolio_item.id %>">
    <a href="<%= portfolio_show_path(portfolio_item) %>">
      <img src=<%= portfolio_img(portfolio_item.thumb_image, 'thumb')%> alt="" class="portfolio-responsive">
    </a>
    <div class="card-body">
      <h5 class="card-header-portfolio">
        <%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %>
      </h5>
      <p class="card-text">
        <%= portfolio_item.subtitle %>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
        </div>
      </div>
    </div>
  </div>
</div>
