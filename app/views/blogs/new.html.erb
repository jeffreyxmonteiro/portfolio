<h1>Create New Blog</h1>

<%= simple_form_for @blog do |f| %>
<% if @blog.errors.any? %>
  <% @blog.errors.full_messages.each do |error| %>
    <%= alert_generator error %>
  <% end %>
<% end %>
<%=  f.input :title %>
<%=  f.input :body, :input_html => {:rows => 15} %>
<%= f.submit "add a blog post", class: "btn btn-primary" %>
<% end %>

<p> <%= link_to "Return to Blogs Page", blogs_path %>   </p>
