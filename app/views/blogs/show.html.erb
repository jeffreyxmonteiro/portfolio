<div class="col-sm-8 blog-main">
  <h1><%= @blog.title %></h1>
  <p>
    <%= link_to "Go home", blogs_path %> |
    <%= link_to "Edit post", edit_blog_path %> |
    <%= link_to "Delete post", blog_path, method: :delete %>
  </p>
  <p><%= @blog.body %></p>

  <%= render 'comments/comment_form' %>

  <div id="comments" data-blog-id="<%= @blog.id %>">
    <%= render @blog.comments %>
  </div>

</div>




